
<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
        <form asp-action="PartialAddComment" asp-controller="Comment" method="post">
            <input class="form-control" type="text" name="CommentUserName" placeholder="Name Surname" required="">
            <input class="form-control" type="Text" name="CommentTitle" placeholder="Context" required="">


            <textarea class="form-control" name="CommentContent" placeholder="Comment..." required=""></textarea>
            <button type="submit" class="btn btn-primary submit">Make Comment</button>
        </form>
    </div>
</div>