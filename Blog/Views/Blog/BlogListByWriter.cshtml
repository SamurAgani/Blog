@model List<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Title</th>
        <th>Create Date</th>
        <th>Category</th>
        <th>Status</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate.ToString("dd/mm/yyyy")</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogStatus</td>
            <td><a asp-action="DeleteBlog" asp-controller="Blog" asp-route-Id=@item.BlogID.ToString() class="btn btn-danger">Delete</a></td>
            <td><a asp-action="DeleteBlog" asp-controller="Blog" asp-route-Id=@item.BlogID.ToString() class="btn btn-warning">Update</a></td>
        </tr>
    }
</table>
<a  href="#" class="btn btn-primary">New Blog</a>
