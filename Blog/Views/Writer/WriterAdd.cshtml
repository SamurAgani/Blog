@model Blog.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Writer profile info edit</h4><br />
                <div class="form-group">
                    <label for="exampleInputName1">Id</label>
                    <input asp-for="@Model.WriterID" type="text" class="form-control" id="exampleInputName1" name="WriterID" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Name Surname</label>
                    <input asp-for="@Model.WriterName" type="text" class="form-control" id="exampleInputName1" name="WriterName" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    <input asp-for="@Model.WriterMail" type="email" class="form-control" id="exampleInputEmail3" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input asp-for="@Model.WriterPassword" type="text" class="form-control" id="exampleInputPassword4" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">About</label>
                    <textarea asp-for="@Model.WriterAbout" class="form-control" id="exampleTextarea1" rows="4"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Writer Image</label>
                    <input type="file" name="WriterImage"/>
                </div>
                <a><input class="btn btn-gradient-primary mr-2" type="submit" /></a>
                <button class="btn btn-light">Cancel</button>

            </div>
        </div>
    </div>
</form>

